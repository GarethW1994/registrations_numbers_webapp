<div class="panel panel-default">
	<div class="panel-heading">Please Enter Registration Below:</div>
	<div class="panel-body">
		<form class="navbar-form navbar-left" role="search" method="post" action="reg_numbers">
			<div class="form-group">
				<input type="text" class="form-control" placeholder="Enter Registration Number" name="regNum">
			</div>
			<button type="submit" class="btn btn-default">Add</button>
		</form>
	</div>
</div>


<div class="panel panel-default">
	<div class="panel-heading">Filter Registrations By Town:</div>
	<div class="panel-body">
		<div class="row">
			<div class="col-lg-6">
				<div class="input-group">
					<span class="input-group-addon">
        <input type="radio" aria-label="Cape Town" name="Town" value="Cape Town"><label>Cape Town</label>
		</span>
					<span class="input-group-addon">
		<input type="radio" aria-label="Stellenbosch" name="Town" value="Stellenbosch"><label>Stellenbosch</label>
		</span>

					<span class="input-group-addon">
        <input type="radio" aria-label="Paarl" name="Town" value="Paarl"><label>Paarl</label>
		</span>
			</div>
			</div>
			
			<div class="col-lg-6">
				<div class="input-group">
					<span class="input-group-addon">
						<input type="radio" aria-label="Bellville" name="Town" value="Bellville"><label>Bellville</label>
					</span>
					<span class="input-group-addon">
						<input type="radio" aria-label="Malmesbury" name="Town" value="Malmesbury"><label>Malmesbury</label>
					</span>
					<span class="input-group-addon">
						<input type="radio" aria-label="Show All" name="Town" value="Show All" checked="true"><label>Show All</label>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>

		<div class="FormTwoContainer">

		</div>

		<div class="regContainer">
			<ul>
				{{#each data}}
				<li class="regNumbers">{{registration_number}}</li>
				{{/each}}
			</ul>
		</div>